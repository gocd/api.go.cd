<%
json = {
  materials: [
    {
      type: 'hg',
      attributes: {
        name: 'api-docs',
        url: 'http://username:password@hg.example.com/hg/api.go.cd',
        destination: 'api-docs',
        filter: nil,
        invert_filter: true,
        auto_update: true
      }
    }
  ]
